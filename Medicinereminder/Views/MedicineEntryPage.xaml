<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Medicinereminder.Views.MedicineEntryPage"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="70,*,70">

        <!-- Top -->
        <BoxView Grid.Row="0" BackgroundColor="#212121" />
        <BoxView Grid.Row="1" BackgroundColor="white" />

        <Grid Grid.Row="0" BackgroundColor="#212121" Padding="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Cím középen -->
            <Label
                Text="Medicine Details" 
                Grid.Column="1"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                FontSize="26"
                FontAttributes="Bold"
                TextColor="GreenYellow" />

            <!-- Jobb oldali ikon -->
            <Image
                 Grid.Column="2"
                 Margin="0,0,20,0"
                   Source="edit.png"
                 WidthRequest="32"
                 HeightRequest="32"
                 HorizontalOptions="End"
                 VerticalOptions="Center"
                 BackgroundColor="Transparent"/>
        </Grid>

        <!--  Grid  -->
        <Grid Grid.Row="1" Padding="20" RowSpacing="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Medicine name -->
            <Label Grid.Row="0" FontSize="16" Text="Name of your medicine:"/>
            <Entry Grid.Row="1" x:Name="MedicineNameEntry" Placeholder="Enter the name of the medicine"/>


            <!-- Days label -->
            <Label Grid.Row="2" FontSize="16" Text="Choose the days, dosage and timing:"/>

            <ScrollView Grid.Row="3" Padding="10" >
