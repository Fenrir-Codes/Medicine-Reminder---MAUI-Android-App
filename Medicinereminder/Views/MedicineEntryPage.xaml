                                        <x:String>25</x:String>
                                        <x:String>40</x:String>
                                        <x:String>50</x:String>
                                        <x:String>75</x:String>
                                        <x:String>100</x:String>
                                        <x:String>200</x:String>
                                        <x:String>300</x:String>
                                        <x:String>400</x:String>
                                        <x:String>500</x:String>
                                        <x:String>600</x:String>
                                    </x:Array>
                                </Picker.ItemsSource>
                            </Picker>
                            <Picker Grid.Column="2" x:Name="MondayMgPicker" StyleId="MondayMg" Title="Dosage" SelectedIndexChanged="DayDosageSelected">
                                <Picker.ItemsSource>
                                    <x:Array Type="{x:Type x:String}">
                                        <x:String>Pill</x:String>
                                        <x:String>mg</x:String>
                                    </x:Array>
                                </Picker.ItemsSource>
                            </Picker>
                            <CheckBox Grid.Column="3" x:Name="MondaySwitch" VerticalOptions="Center" HorizontalOptions="End" Color="Black" CheckedChanged="CheckBoxChecked"/>
                        </Grid>
                    </Border>

                    <!-- Tuesday -->
