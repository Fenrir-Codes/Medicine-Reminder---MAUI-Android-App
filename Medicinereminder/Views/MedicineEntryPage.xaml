                                </Picker.ItemsSource>
                            </Picker>
                            <CheckBox Grid.Column="3" x:Name="ThursdaySwitch" VerticalOptions="Center" HorizontalOptions="End" Color="Black" CheckedChanged="CheckBoxChecked"/>
                        </Grid>
                    </Border>

                    <!-- Friday -->
                    <Border Stroke="Black" StrokeShape="RoundRectangle 8" HeightRequest="60">
                        <Grid ColumnDefinitions="2*,2*,2*,Auto" Padding="12,5" BackgroundColor="White">
                            <Label Grid.Column="0" Text="Friday" FontAttributes="Bold" VerticalOptions="Center"/>
                            <Picker Grid.Column="1" x:Name="FridayTabletPicker" StyleId="FridayTablet" Title="Amount" SelectedIndexChanged="DayDosageSelected">
                                <Picker.ItemsSource>
