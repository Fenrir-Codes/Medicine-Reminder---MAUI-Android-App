                        <Grid ColumnDefinitions="2*,2*,2*,Auto" Padding="12,5" BackgroundColor="White">
                            <Label Grid.Column="0" Text="Saturday" FontAttributes="Bold" VerticalOptions="Center"/>
                            <Picker Grid.Column="1" x:Name="SaturdayTabletPicker" StyleId="SaturdayTablet" Title="Amount" SelectedIndexChanged="DayDosageSelected">
