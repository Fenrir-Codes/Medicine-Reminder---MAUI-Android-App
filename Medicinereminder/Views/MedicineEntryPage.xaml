                    <!-- TimePicker -->
                    <Frame BackgroundColor="Transparent" BorderColor="Black" Padding="10" CornerRadius="8" HasShadow="False">
                        <VerticalStackLayout Spacing="10" HorizontalOptions="Fill">
                            <!-- Label -->
                            <Label Text="Pick timings:" FontAttributes="Bold" Margin="0,10" />

                            <!-- List of added times -->
                            <CollectionView x:Name="TimeListView" HeightRequest="120">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <Label Grid.Column="0" Text="{Binding}" VerticalOptions="Center" />
                                            <Button Grid.Column="1" Text="X" BackgroundColor="DarkSeaGreen"  
                                Clicked="OnRemoveTimeClicked" CommandParameter="{Binding}" HorizontalOptions="End"/>
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>

                            <!-- TimePicker -->
                            <HorizontalStackLayout HorizontalOptions="Fill">
                                <TimePicker x:Name="NewTimePicker" Time="06:00" HorizontalOptions="Fill" WidthRequest="350"/>
                            </HorizontalStackLayout>

                            <!-- Add Button -->
                            <Button Text="Add Time" 
                                BackgroundColor="DarkSeaGreen" 
                                Clicked="OnAddTimeClicked"
                                HorizontalOptions="Fill"/>
                            
                        </VerticalStackLayout>
